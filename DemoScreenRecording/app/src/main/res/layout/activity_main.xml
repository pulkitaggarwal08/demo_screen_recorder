<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.demo_screen_recording.pulkit.MainActivity">

    <Button
        android:id="@+id/btn_direct_screen_recording"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:text="Direct Screen Recording"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_screen_recording"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_direct_screen_recording"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:text="Screen Recording"
        android:textAllCaps="false" />

</RelativeLayout>
